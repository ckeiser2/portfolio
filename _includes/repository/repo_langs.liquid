{% assign username = include.username | default: site.github_username %}

{% assign theme_light = site.repo_theme_light | default: 'default' %}
{% assign theme_dark  = site.repo_theme_dark  | default: 'dark' %}

<div class="repo-card card">
  <div class="card-body text-center">
    <h5 class="card-title mb-3">Top Languages</h5>

    <!-- Light theme -->
    <img
      src="https://github-readme-stats-keiser1.vercel.app/api/top-langs/?username={{ username }}&size_weight=0.5&count_weight=0.5&theme={{ theme_light }}"
      alt="Top programming languages (light theme)"
      class="img-fluid theme-light"
      loading="lazy"
    />

    <!-- Dark theme -->
    <img
      src="https://github-readme-stats-keiser1.vercel.app/api/top-langs/?username={{ username }}&size_weight=0.5&count_weight=0.5&theme={{ theme_dark }}"
      alt="Top programming languages (dark theme)"
      class="img-fluid theme-dark"
      loading="lazy"
    />
  </div>
</div>
